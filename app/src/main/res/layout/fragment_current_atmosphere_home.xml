<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_atm"
    android:elevation="0dp"
    tools:context=".CurrentAtmosphereHomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide_catmf_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide_catmf_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.28"/>

    <TextView
        android:id="@+id/tv_catmf_humidityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:text="Humidity"
        android:textAllCaps="true"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_catmf_humidityVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_1"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_humidityTxt"
        app:layout_constraintEnd_toEndOf="@id/tv_catmf_humidityTxt"
        android:text="75.44 % "
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_catmf_visibilityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vguide_catmf_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:text="Visibility"
        android:textSize="22sp"
        android:fontFamily="@font/koho_regular"
        android:textAllCaps="true"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_catmf_visibilityVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_catmf_visibilityTxt"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_visibilityTxt"
        app:layout_constraintEnd_toEndOf="@id/tv_catmf_visibilityTxt"
        android:text="12.3 KM "
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_catmf_windSpeedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_visibilityVal"
        android:layout_marginTop="50dp"
        android:text="Wind Speed"
        android:textAllCaps="true"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_catmf_windSpeedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_catmf_windSpeedTxt"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_windSpeedTxt"
        app:layout_constraintEnd_toEndOf="@id/tv_catmf_windSpeedTxt"
        android:text="1.59 m/s"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_catmf_windDirectionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_windSpeedVal"
        android:text="Wind Direction"
        android:textAllCaps="true"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_catmf_windDirectionVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_catmf_windDirectionTxt"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_windDirectionTxt"
        app:layout_constraintEnd_toEndOf="@id/tv_catmf_windDirectionTxt"
        android:text="145.19 \u00B0"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_catmf_aqiTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_2"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_windDirectionVal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="AQI"
        android:textColor="@color/black"
        android:fontFamily="@font/koho_regular"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_catmf_aqiVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_2"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_aqiTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="146 (Unhealthy for Sensitive Groups)"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_catmf_precipitationProbTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_aqiVal"
        android:layout_marginTop="10dp"
        android:text="Precipitation Prob."
        android:textAllCaps="true"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_catmf_precipitationProbVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_catmf_precipitationProbTxt"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_precipitationProbTxt"
        app:layout_constraintEnd_toEndOf="@id/tv_catmf_precipitationProbTxt"
        android:text="0 %"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_catmf_pressureSeaLevelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_precipitationProbVal"
        android:layout_marginTop="8dp"
        android:text="Pressure Sea Level"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_catmf_pressureSeaLevelVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_catmf_pressureSeaLevelTxt"
        app:layout_constraintTop_toBottomOf="@id/tv_catmf_pressureSeaLevelTxt"
        app:layout_constraintEnd_toEndOf="@id/tv_catmf_pressureSeaLevelTxt"
        android:text="1003.21 hPa"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_catmf_locationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vguide_catmf_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="105dp"
        android:src="@drawable/ic_baseline_location_on_24"/>

    <TextView
        android:id="@+id/tv_catmf_cityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_catmf_locationIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="99dp"
        android:layout_marginLeft="5dp"
        android:text="Naliya"
        android:textAllCaps="true"
        android:fontFamily="@font/koho_regular"
        android:textSize="22dp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>